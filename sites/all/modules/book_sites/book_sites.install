//安装内容类型
function book_sites_install(){
  node_types_rebuild();
  $types = node_type_get_types();
  node_add_body_field($types['book_sites']);
  $body_instance = field_info_instance('node', 'body','book_sites');
  $body_instance['type'] = 'text';
  field_update_instance($body_instance);
}


//卸载内容类型
function book_sites_uninstall(){
  $sql = 'SELECT nid FROM {node} n WHERE n.type = :type';
  $result = db_query($sql,array(':type'=>'book_sites'));
  $nids = array();
  foreach ($result as $row){
    $nids[] = $row->nid;
  }

  node_delete_multiple($nids);


  $instances = field_info_instances('node','book_sites');

  foreach ($instances as $instance_name => $instance){
    field_delete_instance($instance);
  }

  node_type_delete('book_sites');
  field_purge_batch(1000);
}
